<!DOCTYPE html>
<html data-theme="cupcake">


<head>
  <title>
    SBAY | Chi tiết combo 
  </title>
  <meta name="author" content="Chung Le Ba">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/daisyui@3.0.20/dist/full.css" rel="stylesheet" type="text/css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

  
  <script src="https://cdn.tiny.cloud/1/rso5ni3wc631ahu7iz5tgtsmk8mldtbk0d2rmct3ayz593bj/tinymce/6/tinymce.min.js"
    referrerpolicy="origin"></script>
  <script>tinymce.init({ selector: 'textarea' });</script>
</head>

<body>


  <section>
    <div class="flex flex-col mx-auto h-full">
      <div class="grid grid-cols-12">
        <div class="col-span-8">
          <h1 class="text-center mb-5 text-2xl font-bold text-red-600 mt-5">Chi tiết combo</h1>
        </div>
        <div class="col-span-4 self-center text-end ...">
          <a href="/manager" class=" mt-3 mr-5 underline text-red-600">Về trang quản lý</a>
        </div>
      </div>
        <div class="grid md:grid-cols-12 sm:grid-rows-1 gap-4 bg-slate-100 p-5 rounded-lg h-screen ">
          <div class="md:col-span-4">
            <h2 class="text-xl mb-3 text-center">Thông tin combo</h2>
            <div class="space-y-2 md:space-y-6 bg-white p-5 rounded-lg">
              <div>
                <label for="ten-combo" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">1.Tên
                  combo:</label>
                <p class="text-xl font-bold"><%= data.name %></p>
                <% if (data.active==false) { %>
                  <p class="text-stone-500">Chưa áp dụng</p>
                  <% } else { %>
                    <p class="text-green-500">Đang áp dụng</p>
                    <% } %>
              </div>
              <div>
                <label for="location" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">2.Vị
                  trí:</label>
                <p class="text-lg font-bold"><%= data.location %></p>
              </div>

              <div>
                <label for="code" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">3.Mã combo:</label>
                <p class="text-lg font-bold"><%= data.code %></p>
              </div>
              <div>
                <label for="code" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">4.Thời gian:</label>
                <p class="text-lg font-bold"><%= data.timeCombo %></p>
              </div>
              <div>
                <label for="code" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">5.Loại giá:</label>
                <% if (data.priceType == 1) { %>
                  <div class=" ml-2">
                    <label class="label cursor-pointer">
                      <span class="label-text">Giá cố định (đ):</span>
                    </label>
                    <p class="text-md font-bold"><%= formatPrice(data.price) %></p>
                  </div>
                  <% } else if (data.priceType == 2) { %>
                    <div class=" ml-2">
                      <label class="label cursor-pointer">
                        <span class="label-text">Giá từ (đ):</span>
                        <p class="text-md font-bold"><%= formatPrice(data.price) %></p>
                      </label>
                    </div>
                    <% } else if (data.priceType == 3) { %>
                      <div class=" ml-2">
                        <label class="label cursor-pointer">
                          <span class="label-text">Giá liên hệ</span>
                        </label>
                      </div>
                <% } %>
                
                
                
              </div>
            </div>
          </div>
          <!-- ... -->
          <div class="md:col-span-8">

            <div class="grid grid-cols-3">
              <h2 class="text-xl mb-3 text-center col-span-2">Mô tả combo</h2>
              <div class="col-span-1 flex flex-row justify-end">
                <% if (data.active==false) { %>

                  <button class="btn btn-sm mr-2 rounded-lg text-green-500 text-end flex flex-row justify-end"
                    title="Áp dụng">
                    <i data-feather="play" class="w-4 h-4"></i>
                  </button>
                  <% } else { %>
  
                    <button class="btn btn-sm mr-2 rounded-lg text-stone-500 text-end flex flex-row justify-end"
                      title="Ngưng áp dụng">
                      <i data-feather="pause" class="w-4 h-4"></i>
                    </button>
                    <% } %>
                      <div class="dropdown dropdown-top dropdown-end">
                        <label tabindex="0" class="btn btn-sm btn-ghost z-0"><i data-feather="more-vertical"
                            class="w-4 h-4"></i></label>
                        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-white rounded-box w-52 z-10">
                          <li><a href="/manager/edit-combo/<%= data._id %>">Sửa combo</a></li>
                          <li><a>Xóa combo</a></li>
                        </ul>
                      </div>
              </div>
              
            </div>
            <div class="bg-white p-5 rounded-lg">
              <p><%- data.description %></p>
              
            </div>
            <label class="label cursor-pointer">
              <span class="label-text mt-3">Hình ảnh đính kèm:</span>
            </label>
            <div id="imgPreview" class="grid grid-cols-6 gap-2 p-2 align-middle">
              <% for (let index = 0; index < data.images.length; index++) { %>
                <img class="w-full rounded-md self-center ..." src="/uploads/<%= data.images[index] %>" alt="">
              <% } %>
            </div>
            
          </div>
        </div>

    </div>
  </section>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
  <script>
    function readURL(input) {
        if (input.files) {
            var imagesPreview = $('#imgPreview');
            imagesPreview.empty(); // Xóa nội dung hiện tại
            $.each(input.files, function(i, file){
                var reader = new FileReader();
                reader.onload = function (e) {
                    var img = $('<img class="w-20 h-20">').attr('src', e.target.result);
                    imagesPreview.append(img);
                }
                reader.readAsDataURL(file);
            });
        }
    }
    $("#imgInp").change(function(){
        readURL(this);
    });
    feather.replace()

  </script>
</body>

</html>